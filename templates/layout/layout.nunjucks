<!DOCTYPE html>
<html class="html no-js" lang="en" {%- if route %} data-{{ route }} {%- endif -%}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <title>{{ name }}</title>
    <link rel="stylesheet" href="/css/main.css">

    {% block head -%}
    {%- endblock -%}
  </head>
  <body class="body">

    <main class="main">

      {%- block content -%}
      {%- endblock -%}
    </main>

    {% block script -%}
    {%- endblock -%}
  </body>
