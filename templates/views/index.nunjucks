{%- extends 'layout/layout.nunjucks' -%}

{%- block head -%}

  <link rel="manifest" href="/manifest.json">
{%- endblock -%}

{%- block content -%}

  <form action="/submit" enctype="multipart/form-data" method="post">
    <input class="input" accept="image/*;capture=camera" name="file" type="file">
    <button class="sy-button">Submit</button>
  </form>
  <img class="img" alt="Preview">
{%- endblock -%}

{%- block script -%}

  <script src="/js/bundle.js"></script>
{%- endblock -%}
